#include "../HLSL/Random.hlsl"

uniform uint _ThreadCount;
uniform uint _Seed;

RWStructuredBuffer<uint> gb_RandStates;

#pragma kernel InitRandomStates
[numthreads(64, 1, 1)]
void InitRandomStates(uint DTid : SV_DispatchThreadID)
{
    if (DTid >= _ThreadCount) return;

    Random rand = Random::CreateFromIndex(DTid + _Seed);
    gb_RandStates[DTid] = rand.m_State;
}
